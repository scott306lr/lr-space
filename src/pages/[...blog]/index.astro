---
import { BLOG } from '~/config.mjs';

import { getCanonical, getPermalink } from '~/utils/permalinks';
import { fetchPosts } from '~/utils/blog';
import { findImage } from '~/utils/images';
import MarkdownLayout from '~/layouts/MarkdownLayout.astro';

export async function getStaticPaths() {
  if (BLOG?.disabled || BLOG?.post?.disabled) return [];
  
  const blogEntries = await fetchPosts();
  return blogEntries.map((post) => ({
    params: {
      blog: post.permalink,
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const url = getCanonical(getPermalink(post.permalink, 'post'));

const meta = {
  title: post.title,
  description: post.description,
  canonical: post.canonical || url,
  image: await findImage(post.image),
  noindex: BLOG?.post?.noindex,
  ogType: 'article',
};


const { Content, remarkPluginFrontmatter } = await post.render();
const minutesRead = remarkPluginFrontmatter?.minutesRead;
---

<!-- <Layout >
  <SinglePost post={{ ...post, image: meta.image }} url={url} />
  <ToBlogLink />
</Layout> -->

<MarkdownLayout meta={meta} frontmatter={{ ...post, image: meta.image, minutesRead: minutesRead }} url={url}>
  <Content />
</MarkdownLayout>
